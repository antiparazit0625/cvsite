@using MVCCV.Models.Entity
@model List<TblIletısım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                                <div class="active tab-pane"  id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var x in Model)
                                        {
                                        <div class="time-label">
                                            <span class="bg-info">
                                                 @(((DateTime)x.TARIH).ToString("dd-MMMM-yyyy"))
                                            </span>
                                        </div>
                                        }
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                      @foreach (var x in Model)
                                      {
                                          <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@x.MAIL</span>
                                                <h3 class="timeline-header text-bold " ><a href="#">@x.KONU</a> from @x.ADSOYAD</h3>
                                                <div class="timeline-body">
                                                   @x.MESAJ
                                                </div>
                                            </div>
                                         </div>
                                       }
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
    </section>
</body>
</html>