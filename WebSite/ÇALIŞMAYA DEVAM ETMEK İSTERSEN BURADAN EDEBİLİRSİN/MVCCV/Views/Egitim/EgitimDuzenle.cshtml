@model MVCCV.Models.Entity.TblEgitimlerim
@{
    ViewBag.Title = "YeniYetenek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<h4> Eğitim Bilgisi Düzenleme Sayfası</h4>
<br />
<form method="post">
    @Html.Label("Eğitim ID")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.BASLIK, new { @class = "form-control" })
    @Html.Label("Alt Başlık 1")
    @Html.TextBoxFor(x => x.ALTBASLIK1, new { @class = "form-control" })
    @Html.Label("Alt Başlık 2")
    @Html.TextBoxFor(x => x.ALTBASLIK2, new { @class = "form-control" })
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.TARIH, new { @class = "form-control" })
    @Html.Label("GNO")
    @Html.TextAreaFor(x => x.GNO, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>

