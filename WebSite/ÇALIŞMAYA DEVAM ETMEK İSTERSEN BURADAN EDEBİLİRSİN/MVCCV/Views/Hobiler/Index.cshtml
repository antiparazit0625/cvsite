@using MVCCV.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var x in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="5" class="form-control" name="Aciklama1" maxlength="500">@x.ACIKLAMA1</textarea>
        <label>Açıklama 2</label>
        <textarea rows="5" class="form-control" name="Aciklama2" maxlength="500">@x.ACIKLAMA2</textarea>
    }
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>
