
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Sertifika Düzenleme Sayfası</h2>

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">

                                <!-- /.tab-pane -->
                                <div class="active tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var x in Model)
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaDuzenle/@x.ID" class="btn btn-info">
                                                    @x.Tarih
                                                </a>
                                            </div>
                                            <div>
                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @x.ACIKLAMA
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="/Sertifika/SertifikaEkle" class="btn btn-danger">Sertifika Ekle</a>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>